<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"

                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="2.3in"
                                        app:cardCornerRadius="6dp"
                                        app:cardElevation="0.7dp"
                                        app:cardUseCompatPadding="true"
                                        app:cardBackgroundColor="@color/cardview_shadow_start_color"
    >

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background"
            />
          <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@color/newsColor"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">
              <TextView
                      android:id="@+id/tvHeader"
                      android:textSize="21sp"
                      android:textColor="@android:color/darker_gray"
                      android:shadowColor="@android:color/white"
                      android:text="Header"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
              <TextView
                      android:id="@+id/tvDesc"
                      android:textSize="12dp"
                      android:textColor="@android:color/darker_gray"
                      android:shadowColor="@android:color/white"
                      android:text=" WakeLock released by handleMessage(REPORT_SV_STATUS, 0, com.android.server.location.GnssLocationProvider$SvStatusInfo@2bb0a8a)
2018-12-11 02:28:46.099 1864-2481/system_process E/memtrack: Couldn't load memtrack module"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>



          </LinearLayout>


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>